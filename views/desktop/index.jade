doctype
html
    head
        title Cinexplore

        meta(charset='UTF-8')

        link(rel='icon', type='image/png', href='images/icon.png')
        link(rel='stylesheet', href='stylesheets/desktop.css')
        link(href='http://fonts.googleapis.com/css?family=Roboto:100,400', rel='stylesheet', type='text/css')

        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-animate.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-route.min.js')

        script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.15.1/TimelineLite.min.js')
