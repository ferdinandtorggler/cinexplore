        script(src='scripts/vendor.js')
        script(src='templates/desktop.js')
        script(src='scripts/desktop.js')

    body
        ng-view

        .main-loading.fade
                    div
                        include ../../icons/logo-hollow.svg
                        h1 Great things take time. Check out the mobile version for now.

        main-loading.main-loading.fade(ng-show='show')
            div(ng-cloak)
                include ../../icons/logo-hollow.svg
                h1 Cinexplore
