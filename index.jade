doctype
html
    head
        title Cinexplore

        meta(charset='UTF-8')

        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
        meta(name='theme-color', content='{{uiColor}}')

        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='mobile-web-app-capable', content='yes')

        link(rel='icon', type='image/png', href='images/icon.png')
        link(rel='stylesheet', href='stylesheets/style.css')

        script(src='scripts/idangerous.swiper.min.js')
        script(src='scripts/snap.min.js')

        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-animate.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-route.min.js')

        script(src='scripts/app.js')

    body(broadcast-on-scroll-end='movie-list-fetch-more')
        include templates/header
        ng-view
        div
            close-menu
            main
                movie-list.movie-list.fade(show-if-view='list')
                include templates/about
                include templates/search
        movie-details.detail-view.fade(if-view='detail.movie')
        person-details.detail-view.fade(if-view='detail.person')
