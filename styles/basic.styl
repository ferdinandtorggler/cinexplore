html, body
    position absolute
    margin 0
    padding 0
    height 100%
    width 100%
    box-sizing border-box
    overflow hidden

main
    display block
    position absolute
    top height-header
    left 0
    margin 0
    padding 0
    width 100%
    height calc(100% - 56px)
    overflow auto

[snap]
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color white
    box-shadow 0 0 20px rgba(black, .75)
    will-change transform
    
movie-details
    display block
    position absolute
    left 0
    top 0
    right 0
    bottom 0

button
    outline none
    border none
    background inherit

.clearfix
    &:after
        content ".9"
        display block
        clear both
        visibility hidden
        line-height 0
        height 0

ul
    list-style-type none
    margin 0
    padding 0

*
    box-sizing inherit
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    user-select none

a
    color inherit
    text-decoration none

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
    display none

.gutter-bottom
    margin-bottom gutter-width