.cover-grid
    margin-left - gutter-width

    &__item
        position relative
        box-sizing border-box
        display inline-block
        vertical-align top
        margin-bottom gutter-width
        padding-left gutter-width
        width 33.333333%

    &__image
        height 100%
        padding-bottom 150%
        background-size cover

    h1
        position absolute
        left 0
        right 0
        bottom 0
        padding-left 15px
        line-height 25px
        background-color rgba(white, .9)
        text-overflow ellipsis
        white-space nowrap
        overflow hidden