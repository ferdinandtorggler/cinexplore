.cover-grid
    padding gutter-small-width
    margin-left - gutter-small-width
    line-height 0

    &__tile
        padding-left gutter-small-width
        display inline-block
        width 50%
        margin-bottom gutter-small-width

    &__item
        position relative
        height 100%
        width 100%
        box-sizing border-box
        vertical-align top

    &__image
        height 100%
        padding-bottom 125%
        background-size cover

    h1
        position absolute
        left 0
        right 0
        bottom 0
        padding-left gutter-width
        font-size 16px
        line-height 48px
        font-weight normal
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        color color-lightest
        background-color #455A64
