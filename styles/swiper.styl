swiper, [swiper]
    display block
    
    &.swiper-container,
    .swiper-wrapper,
    .swiper-slide
        height 100%
        width 100%

.image-swiper
    margin-top 10vh
    height 80vh
    width 100%

    .swiper-slide
        display inline-block
        width 360px
        height 512px
        
    .image-swiper__image
        width 100%
        height 100%
        background-size contain
        background-repeat no-repeat
        background-position center