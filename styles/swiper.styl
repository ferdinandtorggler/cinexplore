.swiper-container
    display block
    height 100%
    width 100%

    &--search
        height calc(100vh - 94px)
        
.swiper-wrapper
    will-change transform

.swiper-wrapper,
.swiper-slide
    height 100%
    width 100%

.image-swiper
    margin-top 10vh
    height 80vh
    width 100%

    .swiper-slide
        display inline-block
        width 360px
        height 512px
        
    &__image
        width 100%
        height 100%
        background-size contain
        background-repeat no-repeat
        background-position center
        
