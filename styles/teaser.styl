.teaser
    position relative
    background-size cover
    background-position 0 20%
    height height-teaser

    &--large
        height height-teaser-expanded

    &__slideshow
        position absolute
        width 100%
        height 100%

        .swiper-wrapper
            width 100%

        &__item
            height 100%
            background-size cover
            background-position 0 20%

    &__content
        position absolute
        width 100%
        height 100%
        padding 5px gutter-width
        overflow auto
        background color-shade
        z-index 1
        pointer-events none

    &__chevron
        position absolute
        width 8px
        height 12px
        right gutter-width
        bottom gutter-width * 1.5
        fill color-lightest

    &__title
        position absolute
        bottom gutter-width
        left gutter-width
        margin 0
        font-family font-main
        font-weight normal
        font-size 24px
        line-height 32px
        color color-lightest