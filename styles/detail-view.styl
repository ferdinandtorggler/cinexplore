.detail-view
    position fixed
    top 0
    bottom 0
    width 100%
    background-color color-lightest
    z-index 1

    .backdrop-swiper
        &__item
            width 100%
            height 100%

    &__close
        position absolute
        padding 16px
        top 0
        left 0
        background none
        z-index 1
        
        svg
            width 16px
            height 16px
            fill color-lightest
            
    .text
        padding 16px

    &--expanded

        .teaser
            height 56px
            transition all .2s ease-out
        
        .detail-container
            height calc(100vh - 56px - 48px)
            transition all .2s ease-out
        
        .teaser__content h1
            font-size 20px
            line-height 56px
            left 72px
            bottom 0
            transition all .2s ease-out
            
        .teaser__slideshow
            filter blur(5px)
            transform scale(1.2)
            transition all .2s ease-out