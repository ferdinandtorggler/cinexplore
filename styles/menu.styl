.menu
    margin 0
    padding 20px 0
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow auto
    -webkit-tap-highlight-color rgba(0,0,0,0)
    background-color color-menu

    &__list
        &:not(:last-child):after
            content ''
            display block
            border-bottom 1px solid color-menu-item-font
            width 230px
            margin 20px 10px

    &__item
        display: flex
        flex-wrap: nowrap
        
    &__label
        flex-grow: 1;
        height height-menu-entry
        line-height height-menu-entry
        width 100%
        padding 0 0 0 13px
        
    &__icon + &__label
        padding 0 0 0 3px

    &__icon
        display inline-block
        min-width height-menu-entry
        height height-menu-entry

        svg
            fill color-menu-item-font
            padding 12px
            height height-menu-entry
            min-width @height
            max-width @height
            transition all .3s ease-out

    li:active
        color color-lightest

        .menu__label
            background-color color-primary
        
        .menu__icon
            background-color darken(color-primary, 20%)
            
        svg
            fill color-lightest