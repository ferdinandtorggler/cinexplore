.menu
    margin 0
    padding 0
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow auto
    -webkit-tap-highlight-color rgba(0,0,0,0)
    background-color darken(color-menu-item, 20%)

    &__list
        &--spacing-bottom
            margin-bottom 15px

    &__item
        display: flex
        flex-wrap: nowrap
        
    &__label
        flex-grow: 1;
        height height-menu-entry
        line-height height-menu-entry
        border-top 1px solid color-menu-item-border-top
        border-bottom 1px solid color-menu-item-border-bottom
        width 100%
        padding 0 0 0 12px

    &__icon
        border-top 1px solid color-menu-item-dark-border-top
        border-bottom 1px solid color-menu-item-dark-border-bottom
        display inline-block
        background-color color-menu-item-dark
        min-width height-menu-entry
        height height-menu-entry

        svg
            fill color-menu-item-font
            padding 12px
            height height-menu-entry
            min-width @height
            max-width @height
            transition all .3s ease-out

    li 
        background-color color-menu-item
                    
        &:active
            color color-lightest

            .menu__label
                background-color color-primary
            
            .menu__icon
                background-color darken(color-primary, 20%)
                
            svg
                fill color-lightest