.movie-list
    display block
    height 100%
    position relative

    [afkl-lazy-image]
        opacity 1
        transition opacity .2 ease-out

    .afkl-lazy-image-loading
        opacity 0

    li
        border-bottom 1px solid #888
        
        .teaser
            background color-darkest
        
        &:last-child
            border-bottom none

    h1
        display block

    &__wrapper
        padding-top 30px
        height 100%
    overflow auto

    &__heading
        position absolute
        top 0
        left 0
        width 100%
        height 30px
        padding-left 10px
        font-weight bold
        line-height @height + 2 // better vertical align
        color color-font-dark
        background color-list-heading-bg
        z-index 3