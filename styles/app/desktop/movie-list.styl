.movie-list
    background-color

    li
        float left
        width 50%
        padding 25px

.movie-list-item
    position relative
    background-color color-lightest
    box-shadow 0px 1px 3px 0px rgba(0,0,0,0.25)
    border-radius 3px
    padding 2px
    
    &__image-container
        position relative
        height 340px
        
    &__image
        height 100%
        
    &__shade
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background color-shade

    &__image
        background-size cover
        background-position center
        height 100%
    
    h1
        text-align center
        font-family 'Montserrat', sans-serif
        text-transform uppercase
        font-size 15px
        line-height 40px