movie-details
    position relative
    height 100%
    background-color white

    .toggle-trailer
        position absolute
        right gutter-width
        top 155px
        width 130px
        height 38px
        background-color color-primary-transparent
        border-radius 5px
        font-family Montserrat
        color color-font-lightest
        font-size 13px
        transition all .3s ease-out

        &:before
            content: 'Watch '

        &.toggle-trailer--playing
            position fixed
            background-color white
            top 10px
            right 48px
            width 96px
            height 28px
            color color-font-dark

            &:before
                content: 'Close '

    .trailer
        height 205px

        iframe
            width 100%
            height 100%
            border none
            outline none

    .movie-details__content
        // 205 = movie header
        // 46 = tab bar
        // 48 = top bar
        height calc(100vh - 205px - 46px - 48px)
        overflow auto

        .swiper-slide
            overflow auto

        .tabs-swiper > .swiper-wrapper > .swiper-slide
            box-sizing border-box
            padding gutter-width

        .movie-details__tab--info
            img
                float left
                display inline-block
                width 30%

            .text
                float left
                box-sizing border-box
                display inline-block
                padding-left gutter-width
                width 70%

        .movie-details__tab--similar
            .movie-details__similar-holder
                margin-left - gutter-width

            .movie-details__similar
                position relative
                box-sizing border-box
                display inline-block
                vertical-align top
                margin-bottom gutter-width
                padding-left gutter-width
                width 33.333333%

            .movie-details__similar__image
                height 100%
                padding-bottom 150%
                background-size cover

            h1
                position absolute
                left 0
                right 0
                bottom 0
                padding-left 15px
                line-height 25px
                background-color rgba(white, .9)
                text-overflow ellipsis
                white-space nowrap
                overflow hidden

        .movie-details__tab--cast
            display block