movie-details
    position relative
    height 100%
    background-color white

    .toggle-trailer
        position absolute
        right gutter-width
        top 155px
        width 130px
        height 38px
        background-color color-primary-transparent
        border-radius 5px
        font-family Montserrat
        color color-font-lightest
        font-size 13px
        transition all .3s ease-out

        &:before
            content: 'Watch '

        &.toggle-trailer--playing
            position fixed
            background-color white
            top 10px
            right 48px
            width 96px
            height 28px
            color color-font-dark

            &:before
                content: 'Close '

    .trailer
        height 205px

        iframe
            width 100%
            height 100%
            border none
            outline none

    .movie-details__content

        .movie-details__tab--cast
            display block