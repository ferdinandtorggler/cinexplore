overlay
    display block
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background-color color-overlay-bg
    z-index 100

    [ng-transclude]
        width 100%
        height 100%

    .overlay__close
        position absolute
        top 0
        right 0
        box-sizing content-box
        padding 15px
        width 20px
        height @width
        fill color-overlay-close
        z-index 1