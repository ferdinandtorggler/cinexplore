.movie-list__heading {{title}} movies
loading.empty-screen.empty-screen--loading(ng-if="loading") movies
.movie-list__wrapper
    ul
        li.teaser.movie-list__item(ng-repeat='movie in movies', style='background-image: url({{ movie.backdrop_path | imagePath:"780" }})')
            .teaser__content(ng-click="navigation.toMovie(movie.id)")
                h1.teaser__title {{movie.title}}
                span.rating.rating--teaser {{movie.vote_average}} / 10