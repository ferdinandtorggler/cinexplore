button.toggle-trailer(ng-class="{'toggle-trailer--playing': playing}", ng-if='movie.videos.results.length', ng-click="toggleTrailer()") {{trailerText}}

.teaser(style='background-image: url({{ movie.backdrop_path | imagePath:"780" }})', ng-if='!trailerVisible')
    .teaser__content
        h1.teaser__title {{movie.title}}
.trailer(ng-if='movie.videos.results.length && trailerVisible')
    iframe(allowfullscreen='1', ng-src='{{ movie.videos.results[0].key | youtubeUrl }}')

tabs.tabs.js-movie-tabs
    .tabs__indicator
    .tabs__container
        .tabs__tab Info
        .tabs__tab Images
        .tabs__tab Cast
        .tabs__tab Similar

.movie-details__content.detail-container
    loading.empty-screen.empty-screen--loading(ng-if='loading') movie
    swiper.tabs-swiper.swiper-container.swiper-container--tabs(data-snap-ignore="true", s-tabs='.js-movie-tabs')
        .swiper-wrapper
            .swiper-slide.movie-details__tab--info
                ul.list
                    li(ng-if='movie.tagline')
                        .list__icon
                            svg: use(xlink:href='icons/svgstore.svg#icon-quote')
                            .list__text
                                span.list__main-line Tagline
                                sub.list__sub-line {{movie.tagline}}
                    li(ng-if='movie.overview')
                        .list__icon
                            svg: use(xlink:href='icons/svgstore.svg#icon-quote')
                            .list__text
                                span.list__main-line Overview
                                sub.list__sub-line {{movie.overview}}
                .no-data(ng-if='!movie.poster_path && !movie.tagline && !movie.overview') No data available.

            .swiper-slide.movie-details__tab--images
                ul.image-grid
                    li.image-grid__item(ng-repeat="image in movie.images.backdrops", open-overlay='movie-images', oo-data='{slide: {{$index}}}')
                        .image-grid__image(style="background-image: url({{image.file_path | imagePath:'300'}})")
                .no-data(ng-if='!movie.images.backdrops') No data available.

            .swiper-slide.movie-details__tab--cast
                ul.list.list--dividers.list--ellipsis
                    li(ng-repeat="person in movie.credits.cast", navigate='person', n-data='{{person.id}}')
                        .list__thumbnail(style="background-image: url({{person.profile_path | imagePath:'185'}})")
                        .list__text
                            span.list__main-line {{person.name}}
                            sub.list__sub-line {{person.character}}
                .no-data(ng-if='!movie.credits.cast.length') No data available.

            .swiper-slide.movie-details__tab--similar
                .cover-grid
                    .cover-grid__tile(ng-repeat="similar in movie.similar.results", navigate='movie', n-data='{{similar.id}}')
                        .cover-grid__item
                            .cover-grid__image(style="background-image: url({{similar.poster_path | imagePath:'500'}})")
                            h1 {{similar.title}}
                .no-data(ng-if='!movie.similar.results.length') No data available.

    overlay.overlay(overlay-name='movie-images', data-snap-ignore="true")
        .image-swiper(ng-if="overlay.visible")
            swiper.swiper-container.swiper-container--images(data-snap-ignore="true", s-options="{initialSlide: {{overlay.data.slide}}}")
                .swiper-wrapper
                    .swiper-slide(ng-repeat='image in movie.images.backdrops')
                        .image-swiper__image(style="background-image: url({{image.file_path | imagePath:'1280'}})")
