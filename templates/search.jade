search.search(if-view='search')
    tabs.tabs.js-search-tabs
        .tabs__indicator
        .tabs__container
            .tabs__tab(ripple) Movies
            .tabs__tab(ripple) People
    input.search__input(type='search', placeholder='Search movies or people', ng-model='search.query', gain-focus)
    swiper.swiper-container.swiper-container--search(data-snap-ignore='true', s-tabs=".js-search-tabs")
        .swiper-wrapper
            .swiper-slide
                ul.list.list--dividers.list--ellipsis
                    li(ng-repeat="result in movies", navigate='movie', n-data='{{ {movie: result} }}', ripple)
                        .list__thumbnail(style="background-image: url({{result.poster_path | imagePath:'185'}})")
                        .list__text
                            span.list__main-line {{result.title}}
                            sub.list__sub-line {{result.release_date | date:'yyyy'}}
            .swiper-slide
                ul.list.list--dividers.list--ellipsis
                    li(ng-repeat="result in people", navigate='person', n-data='{{result}}', ripple)
                        .list__thumbnail(style="background-image: url({{result.profile_path | imagePath:'185'}})")
                        .list__text
                            span.list__main-line {{result.name}}
                            sub.list__sub-line known for {{result.known_for[0].title}}